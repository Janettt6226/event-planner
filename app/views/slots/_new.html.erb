<h1>Suggest a time slot</h1>
<%= simple_form_for [@event, @slot] do |f| %>
  <div class="row">
    <div class="col">
      <%= f.input :date, as: :string,
                  wrapper_html: { class: "mb-4" },
                  label_html: { class: "form-label text-secondary fw-bold" },
                  input_html: { data: { controller: "flatpickr" } } %>
    </div>
    <div class="col">
      <%= f.submit "Suggest this slot" %>
    </div>
  </div>
<% end %>
