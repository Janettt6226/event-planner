<h1>Upcoming events</h1>
<%= link_to "Create an event", new_event_path %>

<div class="container">
  <div class="accordion" id="accordionExample">

    <% @events_grouped_by_date.keys.sort.each do |start_time| %>
      <% events = @events_grouped_by_date[start_time] %>
      <h2 class="section-title">
      <% if start_time.to_date == Date.today %>
          Today
        <% elsif start_time.to_date == Date.yesterday %>
          Yesterday
        <% else %>
          <%= start_time.to_date.strftime('%A, %B %d, %Y') %>
        <% end %>
      </h2>
      <% events.each do |event| %>
        <div class="event-container">
          <%= render "partials/event_card", event: event %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
<%= console %>
